<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    tools:ignore="ExtraText">


    <GridLayout
        android:layout_width="400dp"
        android:layout_height="550dp"

        android:layout_marginTop="50dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="2">

        <androidx.cardview.widget.CardView

            android:layout_rowWeight="0"
            android:layout_columnWeight="0"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"

            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="220dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/inputButton"
                    android:layout_width="158dp"
                    android:layout_height="150dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="#00000000"
                    android:src="@drawable/password128" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Change Password"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_marginLeft="8dp"
            app:cardElevation="6dp">


            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="220dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/historyButton"
                    android:layout_width="158dp"
                    android:layout_height="150dp"

                    android:background="#00000000"
                    android:src="@drawable/agenda128" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="User Record "
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">


            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/bluetoothMenuButton"
                    android:layout_width="158dp"
                    android:layout_height="150dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="#00000000"
                    android:src="@drawable/bluetooth128" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Bluetooth Menu "
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">


            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/exitAppButton"
                    android:layout_width="158dp"
                    android:layout_height="150dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="#00000000"
                    android:src="@drawable/logout128" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Exit "
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="-10dp"
        android:gravity="left"
        android:layout_marginTop="10dp">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/switchSystem"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="-10dp"
        android:gravity="right"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/showCurrentCode"

            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@+id/off"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white" />
    </LinearLayout>





</RelativeLayout>
